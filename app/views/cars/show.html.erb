<div class="car-container">
  <img src="<%= @car.photo1 %> " alt="">
  <img src="<%= @car.photo2 %> " alt="">
  <img src="<%= @car.photo3 %> " alt="">
  <img src="<%= @car.photo4 %> " alt="">
</div>
<div class="car-content-wrapper">
  <div class="car-description">
    <h2><%= @car.name %></h2>
    <h3>Paris - France <%= @car.user.email %></h3>
    <p><%= @car.description %> </p>
  </div>
  <div class="car-booking">
    <% if @car.user == current_user %>
    <%else  %>
    <%= render 'booking_form' %>
    <%end  %>
  </div>
</div>
<div class="container">
 <% if policy(@car).destroy?  %>
 <button id="sweet-alert-demo" class="button-delete">Delete car</button>
 <%= link_to "", car_path(@car), method: :delete, id: "delete-link", class: "hidden" %>
 <%else  %>
 <%end %>
</div>

<h2>
  <%= pluralize @car.reviews.size, "review" %>
</h2>

<div id="reviews">

  <% if @car.reviews.blank? %>
    Be the first to leave a review for <%= @car.name %>
  <% else %>
    <% @car.reviews.each do |review| %>
      <%= render 'reviews/show', review: review %>
    <% end %>
  <% end %>
  <%= render 'reviews/form', car: @car, review: @review %>
</div>

